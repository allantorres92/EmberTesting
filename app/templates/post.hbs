<h1 {{action 'toggleBody'}}>{{title}}</h1>

<p>
	Created {{format_date created}}
</p>
{{#if isShowingBody}}
<p>{{body}}</p>
{{/if}}
<p>
	<strong>Authors:</strong>
{{#each authors as |author|}}
	{{author}},
{{/each}}
</p>

<h4>Comments</h4>
<ul>
	{{#each comments as |comment|}}
		<li><strong>{{comment.name}}</strong> - {{comment.comment}}</li>
	{{/each}}
</ul>
<hr>
<h4>Add Comment:</h4>
<form {{action 'submitAction' on='submit'}} >
	<p>
		Name: {{input value=name required=true}}
	</p>
	<p>
		Body: {{textarea value=comment required=true}}
	</p>
	<button type="submit">Submit</button>
</form>
